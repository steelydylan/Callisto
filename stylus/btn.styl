

.{prefix}btn
	border: none
	color: white
	overflow: hidden
	margin-right:10px;
	padding: 0 15px
	text-transform: uppercase
	height: 40px
	line-height 40px
	text-align center
	display: inline-block
	cursor pointer
	border-radius:3px

.{prefix}btn-default
	background-color: btnDefaultBgColor
	color btnDefaultColor

.{prefix}btn-warning
	background-color: btnWarningBgColor
	color: #fff

.{prefix}btn-info
	background-color: btnInfoBgColor
	color: btnInfoColor

.{prefix}btn-danger
	background-color: btnDangerBgColor
	color: btnDangerColor

.{prefix}btn-success
	background-color: btnInfoBgColor
	color: btnInfoColor

.{prefix}btn-primary
	background-color: btnPrimaryBgColor
	color: btnPrimaryColor

