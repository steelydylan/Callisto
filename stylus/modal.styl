.{prefix}modal
	visibility: hidden
	position:fixed
	top:0
	left:0
	background-color: rgba(0,0,0,.5)
	z-index:99999
	width:100%
	height:100%

.{prefix}modal.active
	visibility: visible

.{prefix}modal_content
	width:modalWidth
	height:modalHeight
	margin:50px auto
	border-radius:3px
	background-color:modalColor
	word-wrap:break-word
	transition: all 0.5s 0.1s;
	transform: translateY(-120%);


.{prefix}modal_content.active
	transition: all 0.5s 0.1s;
	transform: translateX(0%);

.{prefix}modal_heading
	font-size:24px;
	padding:10px
	line-height:20px;
	height:40px;
	background-color:#333;
	border-top-right-radius:3px;
	border-top-left-radius:3px;
	color:#FFF;

.{prefix}modal_dismiss
	float:right;
	color:#FFFFFF;
	cursor:pointer;

.{prefix}modal-primary .{prefix}modal_heading
	background-color:modalHeadingBgPrimaryColor
	color:#FFF

.{prefix}modal_body
	padding:20px